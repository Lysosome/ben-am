{
  "manifest": {
    "publishingInformation": {
      "locales": {
        "en-US": {
          "name": "Ben AM",
          "summary": "Your personal wake-up DJ",
          "description": "Friends pick your daily wake-up songs with custom DJ messages. Set up a routine to wake up to music chosen by your friends, complete with personalized radio-style introductions.",
          "examplePhrases": [
            "Alexa, open Ben AM",
            "Alexa, play today's song on Ben AM",
            "Alexa, skip"
          ],
          "keywords": [
            "alarm",
            "music",
            "wake up",
            "DJ",
            "friends",
            "morning",
            "radio"
          ]
        }
      },
      "isAvailableWorldwide": false,
      "testingInstructions": "Use 'Alexa, open Ben AM' to start playback. Songs must be pre-loaded via the web app. Create an Alexa Routine scheduled for your desired wake-up time that opens this skill.",
      "category": "SMART_HOME",
      "distributionCountries": ["US"]
    },
    "apis": {
      "custom": {
        "endpoint": {
          "uri": "arn:aws:lambda:us-east-1:ACCOUNT_ID:function:ben-am-alexa-skill"
        },
        "interfaces": [
          {
            "type": "AUDIO_PLAYER"
          }
        ]
      }
    },
    "manifestVersion": "1.0",
    "permissions": [],
    "privacyAndCompliance": {
      "allowsPurchases": false,
      "usesPersonalInfo": false,
      "isChildDirected": false,
      "isExportCompliant": true,
      "containsAds": false,
      "locales": {
        "en-US": {
          "privacyPolicyUrl": "https://example.com/privacy",
          "termsOfUseUrl": "https://example.com/terms"
        }
      }
    }
  }
}
