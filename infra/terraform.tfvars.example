# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# Project naming
project_name = "ben-am"

# DynamoDB
table_name = "ben-am-calendar"

# S3 Buckets (will have account ID appended automatically)
assets_bucket_name   = "ben-am-assets"
frontend_bucket_name = "ben-am-frontend"

# SES Email (REQUIRED - must be a valid email you can access)
ses_email_sender = "your-email@example.com"

# Optional: Custom domain configuration
# domain_name          = "benam.example.com"
# acm_certificate_arn  = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERT_ID"

# Lambda configuration
lambda_runtime   = "nodejs20.x"
lambda_timeout   = 30
youtube_dl_timeout = 300

# Application constraints
max_song_duration_seconds = 600  # 10 minutes
max_dj_recording_seconds  = 60   # 1 minute
date_lock_ttl_minutes     = 15

# S3 lifecycle
s3_lifecycle_temp_file_days = 30
